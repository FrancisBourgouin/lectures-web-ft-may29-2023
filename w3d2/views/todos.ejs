<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <title>Todo List Of Destiny</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
  </head>
  <body>
    <header>
      <h1>Todo List Of Destiny YEAH</h1>
    </header>
    <main>
      <h1>All the todos!</h1>
      <ul>
        <% for(const todo of todos){ %>
        <li>
          <p>
            <a href="/todos/<%= todo.id %>" >
              <%= todo.task %></p>
            </a>
          <p><%= todo.description %></p>
          <% if(todo.isComplete){ %>

          <form action="/todos/<%= todo.id %>" method="POST">
            <button>Completed!</button>
          </form>
          <% } else { %>
            <form action="/todos/<%= todo.id %>" method="POST">
              <button>Not completed yet!</button>
            </form>
          <% } %>
        </li>
        <% } %>
      </ul>
      <section>
        <h1>Add the task:</h1>
        <form action="/todos" method="POST">
          <div>
            <label for="">Task name</label>
            <input name="task" type="text" value="" />
          </div>
          <div>
            <label for="">Description</label>
            <input name="description" type="text" value="" />
          </div>
          <div>
            <label for="">Is completed</label>
            <input name="isComplete" type="checkbox" checked="" />
          </div>
          <div>
            <button>Create the todo!</button>
          </div>
        </form>
      </section>
    </main>
  </body>
</html>
